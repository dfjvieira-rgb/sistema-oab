<nav class="nav-tabs">
    <a class="tab active" onclick="showTab('qp')"><i class="fas fa-search"></i>PEÇA PM</a>
    <a class="tab" onclick="showTab('nc')"><i class="fas fa-brain"></i>N.C PM</a>
    <a class="tab" onclick="showTab('pre')"><i class="fas fa-exclamation-triangle"></i>PRELIMINAR</a>
    <a class="tab" onclick="showTab('tese')"><i class="fas fa-gavel"></i>TESES</a>
    <a class="tab" onclick="showTab('aviso')"><i class="fas fa-calendar-day"></i>AVISO PM</a>
    <a class="tab" onclick="showTab('tema')"><i class="fas fa-lightbulb"></i>TEMAS</a>
    <a class="tab" onclick="showTab('sumula')"><i class="fas fa-balance-scale"></i>SÚMULAS</a>
    <a class="tab" onclick="showTab('oj')"><i class="fas fa-shield-halved"></i>OJ's</a>
    <a class="tab" onclick="showTab('artigo')"><i class="fas fa-book"></i>ART. CLT</a>
    <a class="tab" onclick="showTab('artcpc')"><i class="fas fa-file-invoice"></i>ART. CPC</a>
    <a class="tab" onclick="showTab('artcc')"><i class="fas fa-scale-balanced"></i>ART. CC</a>
    <a class="tab" onclick="showTab('leis')"><i class="fas fa-scroll"></i>LEIS</a>
    <a class="tab" onclick="showTab('arsenal')"><i class="fas fa-bolt"></i>50Q PM</a>
