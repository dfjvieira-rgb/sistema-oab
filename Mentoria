<button id="fab-injetor" onclick="injetorMestrePM()" title="Carga PM"><i class="fas fa-rocket"></i></button>

<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
    import { getDatabase, ref, onValue, push, remove, set, serverTimestamp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-database.js";

    const config = {
        apiKey: "AIzaSyAmigODFK8R9c0-fWtagdxLWu9xkODfKYQ",
        authDomain: "masteroab-db5e1.firebaseapp.com",
        projectId: "masteroab-db5e1",
        databaseURL: "https://masteroab-db5e1-default-rtdb.firebaseio.com"
    };
    const app = initializeApp(config);
    const db = getDatabase(app);

    // --- NAMESPACE PM 2026 ---
    const DB_PATH = "PM2026_V13_MASTER";
    const LS_PREFIX = "PM2026_";

    let currentTab = 'qp';
    let editId = null;
    let cache = {};

    const iconMap = {
        qp: 'fa-search', nc: 'fa-brain', pre: 'fa-exclamation-triangle', tese: 'fa-gavel',
        aviso: 'fa-calendar-day', tema: 'fa-lightbulb', sumula: 'fa-balance-scale',
        oj: 'fa-shield-halved', artigo: 'fa-book', artcpc: 'fa-file-invoice', artcc: 'fa-scale-balanced', leis: 'fa-scroll', arsenal: 'fa-bolt'
    };

    window.calcularAviso = () => {
        const anos = parseInt(document.getElementById('anos-trabalho').value) || 0;
        let bonus = anos * 3;
        if (bonus > 60) bonus = 60;
        const total = 30 + bonus;
        document.getElementById('total-dias').innerText = total + " Dias";
        document.getElementById('desc-aviso').innerHTML = `<strong>Base PM (Lei 12.506/11):</strong><br>• 30 dias base + ${bonus} proporcionais.`;
    };

    window.showTab = (tab) => {
        currentTab = tab;
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        const activeTab = document.querySelector(`.tab[onclick*='${tab}']`);
        if(activeTab) activeTab.classList.add('active');
        
        const titulos = { 
            qp: 'Qual a Peça? (PM)', nc: 'Não Confunda (PM)', pre: 'Preliminares PM', tese: 'Teses PM',
            aviso: 'Cálculo Aviso PM', tema: 'Temas PM', sumula: 'Súmulas PM', oj: 'OJ\'s PM',
            artigo: 'Artigos CLT PM', artcpc: 'Artigos CPC PM', artcc: 'Artigos Cód. Civil PM', leis: 'Leis PM', arsenal: '50 Questões PM'
        };
        
        const header = document.getElementById('intel-head');
        header.innerHTML = `<i class="fas ${iconMap[tab]}"></i> ${titulos[tab].toUpperCase()}`;
        header.style.color = `var(--${tab})`;
        
        document.getElementById('btn-salvar').style.background = `var(--${tab})`;
        document.getElementById('calc-aviso-box').style.display = (tab === 'aviso') ? 'block' : 'none';
        
        render();
    };

    document.getElementById('btn-salvar').onclick = () => {
        const t = document.getElementById('inp-t').value;
        const c = document.getElementById('inp-c').value;
        const r = document.getElementById('inp-r').value;
        if(!t || !c) return alert("Preencha título e conteúdo PM.");
        const dados = { t, c, r: r || "", cat: currentTab, ts: serverTimestamp() };
        if(editId) { set(ref(db, `${DB_PATH}/${editId}`), dados); editId = null; }
        else { push(ref(db, DB_PATH), dados); }
        document.getElementById('inp-t').value = ""; document.getElementById('inp-c').value = ""; document.getElementById('inp-r').value = "";
    };

    onValue(ref(db, DB_PATH), (snap) => { cache = snap.val() || {}; render(); });

    function render() {
        const f = document.getElementById('feed-v13');
        f.innerHTML = "";
        const cores = { 
            qp:'var(--qp)', nc:'var(--nc)', pre:'var(--pre)', tese:'var(--tese)', 
            aviso:'var(--aviso)', tema:'var(--tema)', sumula:'var(--sumula)', 
            oj:'var(--oj)', artigo:'var(--artigo)', artcpc:'var(--artcpc)', artcc:'var(--artcc)', leis:'var(--leis)', arsenal:'var(--arsenal)' 
        };
        Object.keys(cache).reverse().forEach(id => {
            const it = cache[id];
            if(it.cat === currentTab) {
                f.innerHTML += `
                    <div class="post-it" style="background:${cores[it.cat]}">
                        <strong><i class="fas ${iconMap[it.cat]}"></i> ${it.t}</strong>
                        <p>${it.c}</p>
                        ${it.r ? `<div class="rascunho-box"><strong>Dica PM:</strong><br>${it.r}</div>` : ""}
                        <div class="actions">
                            <button class="btn-circle" style="background:rgba(255,255,255,0.4); color:black" onclick="editar('${id}')"><i class="fas fa-edit"></i></button>
                            <button class="btn-circle" style="background:rgba(0,0,0,0.2)" onclick="apagar('${id}')"><i class="fas fa-times"></i></button>
                        </div>
                    </div>`;
            }
        });
    }

    window.apagar = (id) => { if(confirm("Deletar da PM?")) remove(ref(db, `${DB_PATH}/${id}`)); };
    window.editar = (id) => {
        const it = cache[id]; editId = id;
        document.getElementById('inp-t').value = it.t;
        document.getElementById('inp-c').value = it.c;
        document.getElementById('inp-r').value = it.r || "";
        window.scrollTo({top:0, behavior:'smooth'});
    };

    window.injetorMestrePM = () => {
        const q = [
            { t: "Art. 144 CF", c: "A segurança pública, dever do Estado, direito e responsabilidade de todos.", r: "Base para provas militares.", cat: "leis" },
            { t: "Tese PM 01", c: "Legalidade estrita nos atos disciplinares militares.", r: "Foco em Direito Administrativo Militar.", cat: "tese" }
        ];
        q.forEach(i => push(ref(db, DB_PATH), { ...i, ts: serverTimestamp() }));
        showTab('tese');
    };

    window.onload = () => showTab('qp');
</script>
</body>
</html>
